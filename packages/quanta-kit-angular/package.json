{
  "name": "quanta-kit-angular",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run sync-version && ng build",
    "sync-version": "node -e \"const pkg = require('./package.json'); const libPkg = require('./projects/quanta-kit/package.json'); libPkg.version = pkg.version; require('fs').writeFileSync('./projects/quanta-kit/package.json', JSON.stringify(libPkg, null, 2) + '\\n');\"",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "ng run quanta-kit:storybook",
    "build-storybook": "ng run quanta-kit:build-storybook",
    "test-storybook": "test-storybook --url http://localhost:6006 --config-dir projects/quanta-kit/.storybook --testTimeout 60000",
    "semantic-release": "semantic-release"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "overrides": {
    "tmp": "^0.2.4"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.7",
    "@angular/compiler": "^20.1.7",
    "@angular/core": "^20.1.7",
    "@angular/forms": "^20.1.7",
    "@angular/platform-browser": "^20.1.7",
    "@angular/router": "^20.1.7",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.6",
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.7",
    "@angular/platform-browser-dynamic": "^20.1.7",
    "@compodoc/compodoc": "^1.1.26",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-coverage": "^2.0.0",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/angular": "^9.1.2",
    "@storybook/builder-vite": "^9.1.3",
    "@storybook/test-runner": "^0.23.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^14.6.1",
    "ng-packagr": "^20.1.0",
    "playwright": "^1.40.0",
    "semantic-release": "^24.2.7",
    "storybook": "^9.1.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4",
    "zone.js": "^0.15.1"
  }
}
